{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -Wno-shadow -O0 -g3"
            }

        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "inheritConfigureEnvironment": true,
            "jobs": 4
        }
    ]
}
